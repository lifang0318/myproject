<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.com.izj.dao.RechargeDao">

    <select id="getRechargesByUserId" resultType="cn.com.izj.base.entity.pay.Recharge">
        select *
        from recharge
        where user_id = #{userId}
        order by create_time desc
    </select>

    <select id="findRechargesByCondition" resultType="cn.com.izj.base.entity.pay.Recharge"
            parameterType="cn.com.izj.dto.RechargeFindCondition">
        select *
        from recharge
        <trim prefix="WHERE" prefixOverrides="AND|OR">
            <if test="id !=null and id != '' ">
                id = #{id}
            </if>
            <if test="userId != null">
                and user_id = #{userId}

            </if>
            <if test=" payType != null ">
                AND pay_type &lt;= #{payType}
            </if>
            <if test=" startTime != null ">
                AND start_time &gt;= #{startTime}
            </if>
            <if test=" endTime != null ">
                AND start_time &lt;= #{endTime}
            </if>
        </trim>
    </select>

    <select id="getRechargeByNum" resultType="cn.com.izj.base.entity.pay.Recharge">
        select *
        from recharge
        where number = #{orderNum}
    </select>
</mapper>