<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.com.izj.dao.DevicePasswordDao">

    <select id="getDriverPassword" resultType="cn.com.izj.entity.DevicePassword">
        select * from device_password where device_id = #{deviceId}
    </select>

    <update id="updateByDeviceId" parameterType="cn.com.izj.entity.DevicePassword">
        update device_password
        <set>
            <if test="keyboardPassword != null">
                keyboard_password = #{keyboardPassword,jdbcType=VARCHAR},
            </if>
            <if test="bluePassword != null">
                blue_password = #{bluePassword,jdbcType=VARCHAR},
            </if>
        </set>
        where device_id = #{deviceId}
    </update>
</mapper>